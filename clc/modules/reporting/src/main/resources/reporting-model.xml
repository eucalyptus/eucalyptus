<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:spring="http://www.springframework.org/schema/beans"
      xmlns:vm="http://www.mulesource.org/schema/mule/vm/2.0" xmlns:euca="http://www.eucalyptus.com/schema/cloud/1.6"
      xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
       http://www.mulesource.org/schema/mule/vm/2.0 http://www.mulesource.org/schema/mule/vm/2.0/mule-vm.xsd
       http://www.eucalyptus.com/schema/cloud/1.6 http://www.eucalyptus.com/schema/cloud/1.6/euca.xsd">

    <euca:endpoint name="ReportingControllerWS"
                   connector-ref="eucaws"
                   address="http://127.0.0.1:8773/services/Reporting"/>
    <euca:endpoint name="ReportingInternalWS"
                   connector-ref="eucaws"
                   address="http://127.0.0.1:8773/internal/ReportingInternal"
                   synchronous="true"/>

    <endpoint name="ReportingWS" address="vm://Reporting" synchronous="false"/>
    <endpoint name="ReportingInternalVM" address="vm://ReportingInternal" synchronous="true"/>
    <endpoint name="ReportingErrorQueueWS" address="vm://ReportingErrorQueue" synchronous="false"/>
    <model name="reporting">

        <default-service-exception-strategy>
            <outbound-endpoint ref="ReportingErrorQueueWS" />
        </default-service-exception-strategy>

        <service name="ReportingRequestQueue">
            <inbound>
                <vm:inbound-endpoint ref="ReportingRequestQueueEndpoint" />
            </inbound>
            <bridge-component />
            <outbound>
                <filtering-router>
                    <outbound-endpoint ref="ReportingWS" />
                    <payload-type-filter expectedType="com.eucalyptus.reporting.service.ReportingMessage" />
                </filtering-router>
            </outbound>
        </service>

        <service name="Reporting">
            <inbound>
                <inbound-endpoint ref="ReportingWS" />
            </inbound>
            <component class="com.eucalyptus.reporting.service.ReportingService" />
            <outbound>
                <filtering-router>
                    <outbound-endpoint ref="ReplyQueueEndpoint" />
                    <payload-type-filter expectedType="com.eucalyptus.reporting.service.ReportingMessage" />
                </filtering-router>
            </outbound>
        </service>

        <service name="ReportingErrorQueue">
            <inbound>
                <inbound-endpoint ref="ReportingErrorQueueWS" />
            </inbound>
            <component class="com.eucalyptus.reporting.service.ws.ReportingErrorHandler" />
        </service>

    </model>
    <model name="reporting-internal">
        <service name="ReportingInternal">
            <inbound>
                <inbound-endpoint ref="ReportingInternalWS" />
                <inbound-endpoint ref="ReportingInternalVM" />
            </inbound>
            <component class="com.eucalyptus.reporting.service.ReportingService" />
        </service>
    </model>

</mule>