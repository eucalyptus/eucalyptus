<infinispan xmlns="urn:infinispan:config:5.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="urn:infinispan:config:5.2 http://infinispan.org/schemas/infinispan-config-5.2.xsd">
    <global>
        <transport>
            <properties>
                <property
                        name="configurationFile"
                        value="eucalyptus_cache_jgroups.xml" />
            </properties>
        </transport>
    </global>

    <default>
        <locking
                isolationLevel="REPEATABLE_READ"
                lockAcquisitionTimeout="20000"/>

        <transaction
                transactionManagerLookupClass="com.eucalyptus.empyrean.EmpyreanTransactionManager"
                transactionMode="TRANSACTIONAL"
                lockingMode="OPTIMISTIC"
                autoCommit="true"
                useSynchronization="true"
                />

        <expiration
                wakeUpInterval="500"
                lifespan="1000"/>

        <clustering
                mode="invalidation"/>
    </default>

    <namedCache name="timestamps">
        <locking 
                isolationLevel="READ_COMMITTED" 
                concurrencyLevel="1000"
                lockAcquisitionTimeout="15000" 
                useLockStriping="false"/>

        <eviction 
                strategy="NONE"/>

        <expiration
               wakeUpInterval="-1"
               lifespan="-1"
               />

        <clustering
                mode="replication"/>
      </namedCache>

</infinispan>
