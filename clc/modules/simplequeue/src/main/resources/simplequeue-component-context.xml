<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:int="http://www.springframework.org/schema/integration"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration.xsd"
>

  <int:channel id="simplequeue-error"/>

  <int:chain id="simplequeue-request-chain" input-channel="simplequeue-request">
    <int:header-enricher>
      <int:error-channel ref="simplequeue-error"/>
    </int:header-enricher>
    <int:service-activator ref="simpleQueueService">
      <int:request-handler-advice-chain>
        <ref bean="simpleQueueServiceAdvice"/>
      </int:request-handler-advice-chain>
    </int:service-activator>
  </int:chain>

  <int:service-activator input-channel="simplequeue-error" ref="simpleQueueErrorHandler"/>

</beans>
